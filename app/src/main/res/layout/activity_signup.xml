<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Create An Account"
        android:textStyle="italic"
        android:fontFamily="serif"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Connect with your friends today!"
        android:fontFamily="serif"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_et_login"
        android:hint="Enter Username"
        android:paddingStart="10dp"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_et_login"
        android:hint="Enter Your Email "
        android:paddingStart="10dp"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_et_login"
        android:hint="Enter Your Phone num"
        android:paddingStart="10dp"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_et_login"
        android:hint="Enter Your password "
        android:paddingStart="10dp"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="SIGNUP"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:cornerRadius="1dp"
        android:backgroundTint="#0C2192"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View

            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:text="Or with "
            android:textSize="20sp"/>
        <View

            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="SignUp with FACEBOOK"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="1dp"
        android:backgroundTint="#0C2192"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Signup with GOOGLE"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="1dp"
        android:backgroundTint="@color/white"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginVertical="10dp"
            android:text="Already have An Account?"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="17sp"
            android:layout_marginStart="5dp"
            android:text="Login"
            android:textColor="#0A1C7E"/>

    </LinearLayout>



</LinearLayout>
