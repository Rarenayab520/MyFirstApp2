<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPasswords">
    <!-- PASSWORD -->
    <TextView
        android:id="@+id/Passwords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwords"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"/>
    <!-- CARDVIEWS -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview1"
        android:layout_below="@+id/Passwords"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#27292E"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/search_svgrepo_com"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textColor="#C5BEBE"
                android:textSize="23sp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/microphone_icon"
                android:drawablePadding="10dp"/>

        </LinearLayout>
        <!-- CARDVIEW 2 -->

    </androidx.cardview.widget.CardView>
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_below="@+id/Cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:padding="8dp"
        android:animateLayoutChanges="true">
        <!-- CARDVIEW 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#27292E">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iconkey"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:src="@drawable/key_circle_solid_svgrepo_com" />
                <TextView
                    android:id="@+id/Fortyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconkey"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="16dp"
                    android:text="41"
                    android:textSize="25sp"
                    android:textColor="#A8ACC1"
                    android:drawableEnd="@drawable/arrow_right"/>
                <TextView
                    android:id="@+id/ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconkey"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="All"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- CARDVIEW 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#27292E">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/iconcontact"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/contacts_svgrepo_com" />
                <TextView
                    android:id="@+id/Four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconcontact"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="4"
                    android:textSize="25sp"
                    android:drawableEnd="@drawable/arrow_right"
                    android:textColor="#A8ACC1" />
                <TextView
                    android:id="@+id/Passkeys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconcontact"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Passkeys"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- CARDVIEW 5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#27292E"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/iconlock"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/security_lock_svgrepo_com" />
                <TextView
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconlock"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:padding="4dp"
                    android:paddingEnd="5dp"
                    android:text="0"
                    android:textSize="25sp"
                    android:textColor="#A8ACC1"
                    android:drawableEnd="@drawable/arrow_right" />
                <TextView
                    android:id="@+id/Codes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconlock"
                    android:layout_marginTop="8dp"
                    android:text="Codes"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- CARDVIEW 6 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:strokeWidth="0dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#27292E"
            app:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/iconwifi"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/wifi_round_svgrepo_com" />

                <TextView
                    android:id="@+id/Fortythree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iconwifi"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"
                    android:padding="4dp"
                    android:layout_marginStart="16dp"
                    android:text="43"
                    android:drawableEnd="@drawable/arrow_right"
                    android:textSize="25sp"
                    android:textColor="#A8ACC1" />
                <TextView
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconwifi"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Wi-Fi"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- CARDVIEW 7 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:strokeWidth="0dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#27292E"
            app:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/exclamation_mark_circle_f_svgrepo_com" />

                <TextView
                    android:id="@+id/Eleven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/icon"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"
                    android:padding="4dp"
                    android:layout_marginStart="16dp"
                    android:text="11"
                    android:textSize="25sp"
                    android:textColor="#A8ACC1"
                    android:drawableEnd="@drawable/arrow_right"/>
                <TextView
                    android:id="@+id/Security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Security"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- CARDVIEW 8 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:strokeWidth="0dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#27292E"
            app:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/icondeleted"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:src="@drawable/delete_svgrepo_com" />

                <TextView
                    android:id="@+id/oo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/icondeleted"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"
                    android:padding="4dp"
                    android:layout_marginStart="16dp"
                    android:text="0"
                    android:drawableEnd="@drawable/arrow_right"
                    android:textSize="25sp"
                    android:textColor="#A8ACC1" />
                <TextView
                    android:id="@+id/Deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icondeleted"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Deleted"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <TextView
        android:id="@+id/Shared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_layout"
        android:text="SHARED GROUPS"
        android:layout_marginTop="10dp"
        android:layout_marginStart="17dp"
        android:textSize="20sp"
        android:textColor="#A8ACC1"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview8"
        android:layout_below="@+id/Shared"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#27292E"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/person_svgrepo_com"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Shared groups"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textColor="#4853A0"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
