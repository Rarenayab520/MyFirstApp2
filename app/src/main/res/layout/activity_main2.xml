<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity2">

    <!-- REMINDER APP HOME SCREEN  -->
    <FrameLayout
        android:id="@+id/Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:padding="8dp"
            android:src="@drawable/more_icon" />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview1"
        android:layout_below="@+id/Bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#52545D"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/search_svgrepo_com"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textColor="#C5BEBE"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/microphone_icon"
                android:drawablePadding="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_below="@+id/Cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:padding="8dp"
            android:animateLayoutChanges="true"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#52545D">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/icon_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:src="@drawable/_975310_alarm_calendar_date_event_hour_icon" />
                    <TextView
                        android:id="@+id/Zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_today"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="16dp"
                        android:padding="4dp"
                        android:layout_marginEnd="6dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/Today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_today"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Today"
                        android:textSize="16sp"
                        android:textColor="#C5BEBE" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#52545D">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <ImageView
                        android:id="@+id/icon_scheduled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:src="@drawable/schedule_icon" />
                    <TextView
                        android:id="@+id/One"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_scheduled"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="16dp"
                        android:padding="4dp"
                        android:layout_marginEnd="6dp"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/Schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_scheduled"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Scheduled"
                        android:textSize="16sp"
                        android:textColor="#C5BEBE" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#52545D"
               >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <ImageView
                        android:id="@+id/icon_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:src="@drawable/all_icon" />
                    <TextView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_all"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="16dp"
                        android:padding="4dp"
                        android:paddingEnd="5dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/ALL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_all"
                        android:layout_marginTop="8dp"
                        android:text="All"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:textColor="#C5BEBE" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:strokeWidth="0dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#52545D"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <ImageView
                        android:id="@+id/icon_flagged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:src="@drawable/flagged_icon" />

                    <TextView
                        android:id="@+id/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_flagged"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="5dp"
                        android:padding="4dp"
                        android:layout_marginStart="16dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/Flagged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_flagged"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Flagged"
                        android:textSize="16sp"
                        android:textColor="#C5BEBE" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
               android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#52545D"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp">
                    <ImageView
                        android:id="@+id/icon_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:src="@drawable/complete_icon" />
                    <TextView
                        android:id="@+id/Completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_completed"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Completed"
                        android:textSize="18sp"
                        android:textColor="#C5BEBE" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/grid_layout">

        <TextView
            android:id="@+id/Icloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="iCloud"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/arrow_down"
            android:drawablePadding="14dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#52545D"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">
            <TextView
                android:id="@+id/reminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reminders"
                android:textSize="20sp"
                android:padding="4dp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/tasks_icon"
                android:drawablePadding="14dp" />
            <TextView
                android:id="@+id/reminders_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:padding="4dp"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/arrow_right"
                android:drawablePadding="8dp"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    <TextView
        android:id="@+id/Outlook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:text="Outlook"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@+id/Outlook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="#52545D"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">
        <TextView
            android:id="@+id/tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tasks"
            android:textSize="20sp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/tasks_icon"
            android:drawablePadding="14dp" />
        <TextView
            android:id="@+id/tasks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="8dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/plusicon"
        android:layout_below="@id/linear3"
        android:layout_marginTop="30dp"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/plus_circle_svgrepo_com"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3"
        android:layout_toRightOf="@id/plusicon"
        android:layout_marginStart="4dp"
        android:text="New Reminder"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="30dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3"
        android:layout_marginStart="310dp"
        android:text="Add list"
        android:textColor="#2196F3"
        android:layout_marginTop="30dp"
        android:textSize="25sp"/>





</RelativeLayout>
