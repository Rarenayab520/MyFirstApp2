<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain_screen">


    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#0F32F4"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="25dp"
                android:src="@drawable/menu_svgrepo_com"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="50dp"
                android:text="Auto Bluetooth Connect"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Cardview1"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_1"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Cardview2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#0F32F4"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bt"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_width="40dp"
                android:layout_height="60dp"

                android:src="@drawable/bluetooth_2_svgrepo_com"/>
            <TextView
                android:id="@+id/bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/bt"
                android:text="Bluetooth"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluetooth"
                android:layout_toRightOf="@+id/bt"
                android:text="Quick Scan"
                android:textSize="20dp"
                android:textColor="@color/white"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Cardview2"
        android:layout_toRightOf="@+id/cardview3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#0F32F4"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/find"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/find_replace_svgrepo_com"/>
            <TextView
                android:id="@+id/pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/find"
                android:layout_marginTop="25dp"
                android:text="Find Devices"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/devices2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pair"
                android:layout_toRightOf="@+id/find"
                android:text="Through Bluetooth"
                android:textSize="13dp"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/cardview4"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCCED9"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/wf"
                android:layout_marginVertical="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/wifi_svgrepo_com"/>
            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/wf"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Wifi Connection"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wifi"
                android:layout_toRightOf="@+id/wf"
                android:layout_marginHorizontal="10dp"
                android:text="Connectivity,Speed testing,Wifi info"
                />
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_forward_circle_svgrepo_com"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/card5"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCCED9"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/system"
                android:layout_marginVertical="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/mobile_charge_svgrepo_com"/>
            <TextView
                android:id="@+id/SI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/system"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="System Info"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SI"
                android:layout_toRightOf="@+id/system"
                android:layout_marginHorizontal="10dp"
                android:text="Device info,Battery info,Storage info"
                />
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_forward_circle_svgrepo_com"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/card6"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCCED9"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Signal"
                android:layout_marginVertical="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/wireless_signal_svgrepo_com"/>
            <TextView
                android:id="@+id/Signalst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Signal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Signal Strenght"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Signalst"
                android:layout_toRightOf="@+id/Signal"
                android:layout_marginHorizontal="10dp"
                android:text="Find Device Signal Strenght by Distance"
                />
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_forward_circle_svgrepo_com"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/card8"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCCED9"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Micro"
                android:layout_marginVertical="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/microphone_svgrepo_com"/>
            <TextView
                android:id="@+id/Microphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Micro"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="MicroPhone"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Microphone"
                android:layout_toRightOf="@+id/Micro"
                android:layout_marginHorizontal="10dp"
                android:text="Open and share,System App,Mobile App"
                />
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_forward_circle_svgrepo_com"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/card7"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#CCCED9"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Apk"
                android:layout_marginVertical="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/file_arrow_down_alt_svgrepo_com"/>
            <TextView
                android:id="@+id/Apkmanager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Apk"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="APK Manager"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Apkmanager"
                android:layout_toRightOf="@+id/Apk"
                android:layout_marginHorizontal="10dp"
                android:text="Open and share,System App,Mobile App"
                />
            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_forward_circle_svgrepo_com"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
